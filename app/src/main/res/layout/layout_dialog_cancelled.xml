<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_title"
        android:text="Update Order"
        android:textSize="32sp"
        android:fontFamily="@font/bradon_medium"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title"
        android:id="@+id/txt_title_small"
        android:text="Update Order Status"
        android:textSize="22sp"
        android:fontFamily="@font/bradon_medium"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_title_small"
        android:id="@+id/txt_status"
        android:text="Status: Placed"
        android:textSize="22sp"
        android:fontFamily="@font/bradon_medium"
        android:textColor="@color/colorPrimaryDark"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rdi_group"
        android:layout_below="@id/txt_status"
        android:orientation="vertical">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rdi_restore_placed"
            android:text="Restore Placed"
            android:checked="true"
            android:fontFamily="@font/bradon_medium"
            android:textSize="22sp"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rdi_delete"
            android:text="Delete"
            android:checked="true"
            android:textStyle="bold"
            android:fontFamily="@font/bradon_medium"
            android:textSize="22sp"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_button"
        android:layout_below="@id/rdi_group"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/btn_cancel"
            android:text="Cancel"
            android:textColor="@color/design_default_color_primary_dark"
            android:background="@color/fui_transparent"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/btn_ok"
            android:text="OK"
            android:textColor="@color/colorPrimary"
            android:background="@color/fui_transparent"/>

    </LinearLayout>

</RelativeLayout>